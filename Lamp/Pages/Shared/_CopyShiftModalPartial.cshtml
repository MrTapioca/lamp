@using Lamp.ViewModels
@model CopyShiftVM

<div class="modal fade"
     id="copy-shift-modal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-controller="">

                <input type="hidden" asp-for="ShiftId" value="0" data-shift-id />

                <div class="modal-header">
                    <h4 class="modal-title">Copy shift</h4>
                </div>
                <div class="modal-body">

                    <div class="form-group">

                        <div class="form-group">
                            <label asp-for="CopyStart"></label>
                            <div class="input-group date" data-picker-copy-start>
                                <input type="text" asp-for="CopyStart" value="" class="form-control"
                                       readonly data-copy-start />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                            <span asp-validation-for="CopyStart" class="text-danger"></span>
                        </div>

                        <label>Create every...</label>

                        <div class="row">
                            <div class="col-xs-6">
                                <div>
                                    <label class="checkbox-inline">
                                        <input type="checkbox" asp-for="CopyMonday" />
                                        Monday
                                    </label>
                                </div>
                                <div>
                                    <label class="checkbox-inline">
                                        <input type="checkbox" asp-for="CopyTuesday" />
                                        Tuesday
                                    </label>
                                </div>
                                <div>
                                    <label class="checkbox-inline">
                                        <input type="checkbox" asp-for="CopyWednesday" />
                                        Wednesday
                                    </label>
                                </div>
                                <div>
                                    <label class="checkbox-inline">
                                        <input type="checkbox" asp-for="CopyThursday" />
                                        Thursday
                                    </label>
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div>
                                    <label class="checkbox-inline">
                                        <input type="checkbox" asp-for="CopyFriday" />
                                        Friday
                                    </label>
                                </div>
                                <div>
                                    <label class="checkbox-inline">
                                        <input type="checkbox" asp-for="CopySaturday" />
                                        Saturday
                                    </label>
                                </div>
                                <div>
                                    <label class="checkbox-inline">
                                        <input type="checkbox" asp-for="CopySunday" />
                                        Sunday
                                    </label>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="form-group">
                        <label>Create through</label>
                        <div class="input-group date" data-picker-copy-through>
                            <input type="text" asp-for="CopyThrough" value=""
                                   class="form-control" readonly data-copy-through />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" data-submit>Create copies</button>
                </div>

            </form>
        </div>
    </div>
</div>